<div id="wiki-wrapper" class="edit">
<div id="head">
  <h1>{{title}}</h1>
</div>
  <div id="login" class="login_form"> 
    <h2>{{subtext}}</h2>  
    <ul class="actions">
      {{#providers_active}}
        <li class="minibutton">
            <a style="height:auto" href="{{{provider_url}}}">
              {{#image}}
                <img src="{{{image}}}" alt="{{image_alt}}" title="{{image_title}}"/>
              {{/image}}
              <div style="text-align: center">{{{name}}}</div>
            </a>
        </li>
      {{/providers_active}}
    </ul>
  </div>
</div>